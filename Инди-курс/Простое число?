def is_prime(n):
    """Функция проверяет, является ли число простым."""
    if n <= 1:
        return False  # Числа 0 и 1 не являются простыми

    if n == 2:
        return True  # Число 2 - простое число

    if n % 2 == 0:
        return False  # Чётные числа больше 2 не являются простыми

    # Проверяем делители от 3 до sqrt(n) с шагом 2
    for i in range(3, int(n**0.5) + 1, 2):
        if n % i == 0:
            return False  # Если число делится нацело, значит оно не простое

    return True

# Ввод числа N
N = int(input("Введите натуральное число N: "))

# Проверка и вывод результата
if is_prime(N):
    print("Yes")
else:
    print("No")
